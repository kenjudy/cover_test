<div class="row">
  <%= render "sidebar" %>
  <div class="span9">
    <div id="side-by-side" class="carousel slide">
      <ol class="carousel-indicators">
        <% (0..@files.length).each do |i| %>
          <li data-target="#side-by-side" data-slide-to="<%= i %>" class=""></li>
        <% end %>
      </ol>
      <div class="carousel-inner">
        <% @files.each do |cover| %>
          <div class="item <%= 'active' if cover == @files.last %>">
              <div class="original">
                <%= render "cover", cover: @original %>
              </div>
              <div class="new-file">
                <%= render "cover", cover: cover %>
              </div>
            </div>
        <% end %>
      </div>
      <%= link_to("all qualities", "#", class: " pull-right show-all") %>
    <a class="left carousel-control" href="#side-by-side" data-slide="prev">‹</a>
    <a class="right carousel-control" href="#side-by-side" data-slide="next">›</a>
  </div>
</div>
<div class="row">
  <div class="span9 offset3">
    <div class="show-all">
      <% @files.each do |cover| %>
        <span class="new-file" style="display:inline-block">
          <%= render "cover", cover: cover %>
        </span>
      <% end %>
      <span class="original" style="display:inline-block">
        <%= render "cover", cover: @original %>
      </span>
    </div>
  </div>
</div>